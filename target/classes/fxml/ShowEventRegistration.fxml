                           </GridPane>
                        </children>
                     </HBox>
                     <HBox alignment="CENTER" spacing="10">
                        <children>
                           <Label styleClass="h4" text="Change Status:" />
                           <ComboBox fx:id="statusCombo" prefWidth="150" styleClass="form-control" />
                           <Button fx:id="updateStatusButton" styleClass="btn-primary" text="Update Status" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </Pane>
      </children>
   </AnchorPane>
