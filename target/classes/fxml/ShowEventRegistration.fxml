<StackPane fx:id="root" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShowEventRegistrationController">
    <stylesheets>
        <URL value="@/colors.css" />
