<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.NewEventRegistrationFormController"
      spacing="20" alignment="TOP_CENTER" styleClass="registration-form" stylesheets="/new_event_registration.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Step Indicator -->
    <HBox fx:id="stepIndicator" spacing="10" alignment="CENTER">
        <Label text="1" styleClass="step" />
        <Label text="2" styleClass="step" />
        <Label text="3" styleClass="step" />
        <Label text="4" styleClass="step" />
        <Label text="5" styleClass="step" />
    </HBox>

    <!-- TabPane for steps -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" maxWidth="400">
        <!-- Step 1: Name -->
        <Tab text="Step 1">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Full Name:"/>
                <TextField fx:id="nameField" promptText="Enter your name"/>
                <Label fx:id="nameErrorLabel" textFill="red" visible="false" managed="false"/>
            </VBox>
        </Tab>

        <!-- Step 2: Coming From -->
        <Tab text="Step 2">
            <VBox spacing="10" alignment="CENTER">
                <Label text="City you're coming from:"/>
                <TextField fx:id="comingFromField" promptText="City name"/>
                <Label fx:id="comingFromErrorLabel" textFill="red" visible="false" managed="false"/>
            </VBox>
        </Tab>

        <!-- Step 3: Places Reserved -->
        <Tab text="Step 3">
            <VBox spacing="10" alignment="CENTER">
                <Label text="How many places do you want to reserve? (1-5)"/>
                <TextField fx:id="placesReservedField" promptText="1 to 5"/>
                <Label fx:id="placesReservedErrorLabel" textFill="red" visible="false" managed="false"/>
            </VBox>
        </Tab>

        <!-- Step 4: Parking -->
        <Tab text="Step 4">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Do you need disabled parking?" />
                <CheckBox fx:id="disabledParkingCheckBox" text="Yes, I need disabled parking"/>
                <Label fx:id="disabledParkingErrorLabel" textFill="red" visible="false" managed="false"/>
            </VBox>
        </Tab>

        <!-- Step 5: Agree Terms -->
        <Tab text="Step 5">
            <VBox spacing="10" alignment="CENTER">
                <CheckBox fx:id="agreeTermsCheckBox" text="I agree to the terms and conditions"/>
                <Label fx:id="agreeTermsErrorLabel" textFill="red" visible="false" managed="false"/>
            </VBox>
        </Tab>
    </TabPane>

    <!-- Navigation Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" text="Previous"/>
        <Button fx:id="nextButton" text="Next"/>
    </HBox>

    <!-- Success Message -->
    <VBox fx:id="successMessage" alignment="CENTER" visible="false" managed="false" spacing="10">
        <Label text="Registration submitted successfully!" styleClass="success-message"/>
    </VBox>
</VBox>