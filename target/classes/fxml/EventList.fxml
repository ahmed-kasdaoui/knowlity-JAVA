<StackPane fx:id="root" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: -light-gray-2; -fx-border-width: 0 1 0 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventListController">
    <stylesheets>
        <URL value="@/colors.css" />
        <URL value="@/drawer.css" />
        <URL value="@/dash.css" />
        <URL value="@/skeleton.css" />
        <URL value="@/bootstrap.css" />
        <URL value="@/immersive_scroll.css" />
        <URL value="@/typographic.css" />
        <URL value="@/shapes.css" />
    </stylesheets>
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="1000.0">
            <children>
                <!-- Header with buttons and search -->
                <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <Button fx:id="btnSearch" contentDisplay="GRAPHIC_ONLY" minHeight="40.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Advanced Search" textOverrun="CLIP">
                            <styleClass>
                                <String fx:value="round" />
                                <String fx:value="btn-warning" />
                            </styleClass>
                            <graphic>
                                <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="WHITE" mouseTransparent="true" style="-fx-fill: white;" />
                            </graphic>
                            <tooltip>
                                <Tooltip text="Advanced Search" />
                            </tooltip>
                        </Button>
                        <Button fx:id="addButton" cache="true" cacheHint="QUALITY" contentDisplay="GRAPHIC_ONLY" minHeight="40.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="round" text="Add New Event">
                            <graphic>
                                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" mouseTransparent="true" style="-fx-fill: white;" />
                            </graphic>
                            <tooltip>
                                <Tooltip text="Add New Event" />
                            </tooltip>
                        </Button>
                        <Button fx:id="exportPdfButton" cache="true" cacheHint="QUALITY" contentDisplay="GRAPHIC_ONLY" minHeight="40.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="round" text="Export PDF">
                            <graphic>
                                <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" mouseTransparent="true" style="-fx-fill: white;" />
                            </graphic>
                            <tooltip>
                                <Tooltip text="Export PDF" />
                            </tooltip>
                        </Button>
                        <TextField fx:id="searchField" prefHeight="40.0" promptText="Search" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="field-outlined" />
                                <String fx:value="clearable-field" />
                            </styleClass>
                            <padding>
                                <Insets left="15.0" />
                            </padding>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>

                <!-- ScrollPane wrapping GridPane for events -->
                <ScrollPane fx:id="scrollPane" layoutX="30.0" layoutY="70.0" fitToWidth="true" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="70.0">
                    <content>
                        <GridPane fx:id="eventsGrid" hgap="20.0" vgap="20.0" style="-fx-padding: 10;">
                            <styleClass>
                                <String fx:value="grid-pane" />
                            </styleClass>
                        </GridPane>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
    </children>
</StackPane>