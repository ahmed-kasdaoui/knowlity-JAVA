<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" styleClass="form-section" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventListController" stylesheets="/event_admin.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Events" styleClass="title"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search by Title:" styleClass="label"/>
        <TextField fx:id="searchField" promptText="Enter event title" styleClass="input-text" prefWidth="200"/>
        <Button fx:id="addButton" text="Add New Event" styleClass="submit-btn"/>
        <Button fx:id="exportPdfButton" text="Export PDF" styleClass="submit-btn"/>
    </HBox>
    <TableView fx:id="eventsTable" styleClass="table-view">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
            <TableColumn fx:id="imageColumn" text="Image" prefWidth="100"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="120"/>
            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="120"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="maxParticipantsColumn" text="Max Participants" prefWidth="120"/>
            <TableColumn fx:id="seatsAvailableColumn" text="Seats Available" prefWidth="120"/>
            <TableColumn fx:id="locationColumn" text="Location" prefWidth="150"/>
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="120"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>