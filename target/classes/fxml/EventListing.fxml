<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" stylesheets="/show_event.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventListingController">
    <top>
        <VBox alignment="CENTER" spacing="20" styleClass="hero-area">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="hero-title" text="Look Book &amp; Events Near You" />
            <Label styleClass="hero-subtitle" text="Join Our Community Closer By Participating In Our Events" />
            <HBox alignment="CENTER" spacing="10" styleClass="search-form">
                <TextField fx:id="searchQuery" promptText="What are you looking for" styleClass="search-input" />
                <ComboBox fx:id="searchCategory" promptText="Category" styleClass="search-combo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Workshop" />
                            <String fx:value="Hackathon" />
                            <String fx:value="Sports" />
                            <String fx:value="Networking" />
                            <String fx:value="Cultural" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <TextField fx:id="searchLocation" promptText="Location" styleClass="search-input" />
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="showNormal" styleClass="toggle-button" text="Recent Events" />
                <Button fx:id="showRecommended" styleClass="toggle-button" text="Recommended Events" />
            </HBox>
            <ScrollPane fx:id="scrollPane" fitToHeight="false" fitToWidth="true" styleClass="event-scroll-pane">
                <content>
                    <GridPane fx:id="eventGrid" alignment="CENTER" hgap="20" styleClass="event-grid" vgap="20" />
                </content>
            </ScrollPane>
            <Button fx:id="moreButton" styleClass="more-button" text="More" visible="false" />
        </VBox>
    </center>
</BorderPane>