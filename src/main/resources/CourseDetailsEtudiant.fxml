<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CourseDetailsControllerEtudiant">
    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox fx:id="mainBox" spacing="30" styleClass="course-details-container">
            <!-- Header avec bouton retour -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" onAction="#handleBack" styleClass="back-button" text="← Retour" />
            </HBox>

            <!-- En-tête du cours -->
            <VBox styleClass="course-header">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <!-- Image du cours -->
                    <StackPane styleClass="course-image-container">
                        <ImageView fx:id="courseImage" fitHeight="250" fitWidth="400" preserveRatio="true" styleClass="course-image" />
                    </StackPane>
                    
                    <!-- Informations principales -->
                    <VBox spacing="15">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label fx:id="courseTitle" styleClass="course-title-large" wrapText="true" />
                            <Button fx:id="favoriteButton" onAction="#handleFavoriteAction" styleClass="favorite-button">
                                <graphic>
                                    <FontAwesomeIconView fx:id="favoriteIcon" glyphName="STAR" size="20" />
                                </graphic>
                            </Button>
                        </HBox>
                        <HBox spacing="10">
                            <Label fx:id="matiereBadge" styleClass="info-badge" />
                            <Label fx:id="categorieBadge" styleClass="info-badge" />
                        </HBox>
                        
                        <!-- Section enseignant -->
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="teacher-section">
                            <ImageView fx:id="teacherImage" fitHeight="60" fitWidth="60" styleClass="teacher-image" />
                            <VBox styleClass="teacher-info">
                                <Label styleClass="info-label" text="Enseignant" />
                                <Label fx:id="teacherEmail" styleClass="teacher-email" />
                            </VBox>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Informations détaillées -->
            <HBox spacing="30" styleClass="info-section">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label styleClass="info-label" text="Durée" />
                    <Label fx:id="dureeLabel" styleClass="info-value" />
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label styleClass="info-label" text="Prix" />
                    <Label fx:id="prixLabel" styleClass="info-value" />
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label styleClass="info-label" text="Langue" />
                    <Label fx:id="langueLabel" styleClass="info-value" />
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label styleClass="info-label" text="Favoris" />
                    <Label fx:id="favoritesLabel" styleClass="info-value" />
                </VBox>
            </HBox>

            <!-- Description -->
            <VBox styleClass="description-section">
                <Label styleClass="info-label" text="Description du cours" />
                <Label fx:id="descriptionLabel" styleClass="description-text" wrapText="true" />
            </VBox>

            <!-- Chapitres -->
            <VBox spacing="15" styleClass="chapters-section">
                <Label styleClass="section-title" text="Contenu du cours" />
            <Button mnemonicParsing="false" onAction="#handleListeEvaluationsAction" text="Passer les evaluations" />
                <VBox fx:id="chaptersContainer" spacing="10">
                    <!-- Les chapitres seront ajoutés ici dynamiquement -->
                </VBox>
            <Button layoutX="40.0" layoutY="105.0" mnemonicParsing="false" onAction="#handleListeQuizAction" text="Passer les Quiz" />
            </VBox>

            <!-- Boutons d'action -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="enrollButton" onAction="#handleEnrollAction" styleClass="action-button" text="S'inscrire au cours" />

            </HBox>
        </VBox>
        
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
    </ScrollPane>

    <stylesheets>
        <URL value="@css/cours.css" />
    </stylesheets>
</AnchorPane>
