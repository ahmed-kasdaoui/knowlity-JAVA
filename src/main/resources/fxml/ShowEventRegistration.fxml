<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" styleClass="form-section" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShowEventRegistrationController" stylesheets="/event_admin.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Event Registration" styleClass="title"/>
    <GridPane hgap="10" vgap="10" styleClass="form-table">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="300"/>
        </columnConstraints>
        <Label text="ID" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="idLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Event Title" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="eventTitleLabel" styleClass="value-label link-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Seats Available" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="seatsAvailableLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="User ID" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="userIdLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Status" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="statusLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Registration Date" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="registrationDateLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Places Reserved" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label fx:id="placesReservedLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Coming From" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <Label fx:id="comingFromLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label text="Disabled Parking" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <Label fx:id="disabledParkingLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Change Status:" styleClass="label"/>
        <ComboBox fx:id="statusCombo" styleClass="input-text" prefWidth="150"/>
        <Button fx:id="updateStatusButton" text="Update Status" styleClass="submit-btn"/>
    </HBox>
</VBox>