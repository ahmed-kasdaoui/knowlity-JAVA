<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" maxWidth="800" minWidth="600" styleClass="form-section" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventAdminFormController" stylesheets="/event_admin.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Event Details" styleClass="title"/>
    <GridPane hgap="10" vgap="10" styleClass="form-table">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="300"/>
        </columnConstraints>
        <Label fx:id="titleLabel" text="Event Title" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="titleField" promptText="Enter event title" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label fx:id="titleErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label fx:id="descriptionLabel" text="Description" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextArea fx:id="descriptionField" promptText="Enter event description" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label fx:id="descriptionErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label fx:id="startDateLabel" text="Start Date" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <DatePicker fx:id="startDatePicker" promptText="Select start date" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label fx:id="startDateErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label fx:id="endDateLabel" text="End Date" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <DatePicker fx:id="endDatePicker" promptText="Select end date" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label fx:id="endDateErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label fx:id="typeLabel" text="Event Type" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <ComboBox fx:id="typeCombo" promptText="Select type" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        <Label fx:id="typeErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        <Label fx:id="maxParticipantsLabel" text="Max Participants" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <TextField fx:id="maxParticipantsField" promptText="Enter max participants" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
        <Label fx:id="maxParticipantsErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        <Label fx:id="locationLabel" text="Location" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
        <TextField fx:id="locationField" promptText="Enter event location" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        <Label fx:id="locationErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
        <Label fx:id="categoryLabel" text="Category" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
        <ComboBox fx:id="categoryCombo" promptText="Select category" styleClass="input-text" GridPane.columnIndex="1" GridPane.rowIndex="14"/>
        <Label fx:id="categoryErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="15"/>
        <Label fx:id="imageLabel" text="Choose Image" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="16">
            <Button fx:id="imageButton" text="Select Image" styleClass="submit-btn"/>
            <Label fx:id="imageFileLabel" text="No file chosen" styleClass="label"/>
        </HBox>
        <Label fx:id="imageErrorLabel" styleClass="form-errors" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="17"/>
        <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="18">
            <Button fx:id="saveButton" text="Save" styleClass="submit-btn"/>
            <Button fx:id="resetButton" text="Reset" styleClass="reset-btn"/>
        </HBox>
    </GridPane>
</VBox>