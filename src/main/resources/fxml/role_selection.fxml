<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="40" 
      stylesheets="@../styles/blog-list.css"
      styleClass="role-selection-container"
      style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 50;" 
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="view.RoleSelectionController">
      
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
        <image>
            <Image url="@/images/logo.png"/>
        </image>
    </ImageView>

    <Text styleClass="welcome-text" text="Bienvenue sur Knowlity" 
          style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #2C3E50;"/>
    <Text styleClass="select-role-text" text="Sélectionnez votre rôle"
          style="-fx-font-size: 20px; -fx-fill: #7F8C8D;"/>

    <HBox alignment="CENTER" spacing="30">
        <VBox styleClass="role-card" onMouseClicked="#handleAdminSelection" alignment="CENTER" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            <Text styleClass="role-icon" text="👨‍💼" style="-fx-font-size: 48px;"/>
            <Text styleClass="role-title" text="Administrateur" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2C3E50;"/>
            <Text styleClass="role-description" text="Gérer tous les blogs" textAlignment="CENTER" wrappingWidth="200"
                  style="-fx-font-size: 14px; -fx-fill: #7F8C8D;"/>
        </VBox>

        <VBox styleClass="role-card" onMouseClicked="#handleUserSelection" alignment="CENTER" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            <Text styleClass="role-icon" text="👤" style="-fx-font-size: 48px;"/>
            <Text styleClass="role-title" text="Utilisateur" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2C3E50;"/>
            <Text styleClass="role-description" text="Consulter les blogs" textAlignment="CENTER" wrappingWidth="200"
                  style="-fx-font-size: 14px; -fx-fill: #7F8C8D;"/>
        </VBox>
    </HBox>
</VBox>
