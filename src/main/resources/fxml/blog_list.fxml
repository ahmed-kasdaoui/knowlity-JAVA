<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.BlogListController"
      stylesheets="/styles/blog-list.css"
      spacing="20">

    <VBox styleClass="header" alignment="CENTER">
        <Label text="Dernières Actualités" styleClass="page-title"/>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Rechercher un article..." styleClass="search-box" prefWidth="300"/>
            <Button fx:id="newBlogButton" text="Nouveau Blog" styleClass="action-button">
                <graphic>
                    <FontIcon iconLiteral="fas-plus"/>
                </graphic>
            </Button>
            <Button fx:id="logoutButton" text="Déconnexion" styleClass="action-button">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <GridPane fx:id="blogContainer" hgap="20" vgap="20"/>
    </ScrollPane>

</VBox>
