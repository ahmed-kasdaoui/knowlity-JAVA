<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750" prefWidth="1200" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2b5876, #4e4376);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.knowlity.controller.student.EvaluationFormController">
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <content>
            <VBox alignment="CENTER" minHeight="750" minWidth="1200" spacing="20.0" style="-fx-background-color: transparent; -fx-padding: 0 0 0 0;">
                <Text fx:id="titleText" style="-fx-font-size: 44px; -fx-fill: #fff; -fx-font-family: 'Segoe UI Black'; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #185a9d, 2, 0.2, 0, 1); -fx-padding: 0 0 28 0;" />
                <HBox fx:id="readonlyInfoBox" alignment="CENTER" managed="false" prefHeight="50" spacing="10" style="-fx-background-color: linear-gradient(to right, #f7b733, #fc4a1a); -fx-background-radius: 16; -fx-padding: 8 32 8 32; -fx-effect: dropshadow(gaussian, #fc4a1a33, 7, 0.12, 0, 3);" visible="false">
                    <Label style="-fx-font-size: 19px; -fx-text-fill: #fff; -fx-font-weight: bold;" text="" />
                    <Label fx:id="readonlyInfoLabel" style="-fx-font-size: 16px; -fx-text-fill: #fff; -fx-font-family: 'Segoe UI Semibold'; -fx-font-weight: bold;" text="You have already completed this evaluation. Answers are read-only." />
                    <VBox.margin>
                        <Insets left="35.0" right="35.0" />
                    </VBox.margin>
                </HBox>
                <VBox alignment="CENTER" prefWidth="700" spacing="8">
                    <Label fx:id="progressLabel" alignment="CENTER" style="-fx-font-size: 18px; -fx-text-fill: #43cea2; -fx-font-family: 'Segoe UI Semibold'; -fx-font-weight: bold;" text="" />
                    <HBox alignment="CENTER" prefWidth="700">
                        <ProgressBar fx:id="progressBar" prefHeight="32" prefWidth="520" style="-fx-accent: #43cea2; -fx-background-radius: 16; -fx-border-radius: 16; -fx-border-width: 2; -fx-border-color: #185a9d44; -fx-effect: dropshadow(gaussian, #185a9d33, 6, 0.17, 0, 2);" />
                    </HBox>
                </VBox>
                <HBox alignment="CENTER" spacing="24">
                    <Text fx:id="deadlineText" style="-fx-font-size: 19px; -fx-fill: #ff512f; -fx-font-family: 'Segoe UI Semibold';" />
                    <Text fx:id="alertText" style="-fx-font-size: 22px; -fx-fill: #ff512f; -fx-font-family: 'Segoe UI Semibold';" />
                </HBox>
                <VBox fx:id="questionFormVBox" alignment="TOP_LEFT" maxWidth="700" prefWidth="700" spacing="32">
                    <Text fx:id="questionLabel" style="-fx-font-size: 26px; -fx-font-family: 'Segoe UI Semibold'; -fx-fill: #fff; -fx-padding: 22 0 0 12;" wrappingWidth="684" />
                    <TextArea fx:id="answerTextArea" prefHeight="170.0" prefWidth="700.0" promptText="Type your answer here..." style="-fx-background-radius: 22; -fx-font-size: 20px; -fx-padding: 22; -fx-background-color: #f7fafd; -fx-border-color: #43cea2; -fx-border-radius: 22; -fx-border-width: 2;" wrapText="true" />
                    <HBox alignment="CENTER" spacing="32">
                        <Button fx:id="prevButton" style="-fx-background-radius: 22; -fx-background-color: #185a9d; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 36 10 36; -fx-effect: dropshadow(gaussian, #185a9d44, 5, 0.17, 0, 2);" text="Previous" />
                        <Button fx:id="nextButton" style="-fx-background-radius: 22; -fx-background-color: #43cea2; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 36 10 36; -fx-effect: dropshadow(gaussian, #43cea2, 5, 0.17, 0, 2);" text="Next" />
                        <Button fx:id="submitButton" style="-fx-background-radius: 22; -fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 36 10 36; -fx-effect: dropshadow(gaussian, #ff512f88, 5, 0.17, 0, 2);" text="Submit" />
                    </HBox>
                </VBox>
                <StackPane fx:id="noQuestionsBox" alignment="CENTER" managed="false" maxHeight="400" maxWidth="700" prefHeight="400" prefWidth="700" style="-fx-background-color: rgba(255,255,255,0.92); -fx-background-radius: 26; -fx-effect: dropshadow(gaussian, #185a9d55, 20, 0.2, 0, 8);" visible="false">
                    <VBox alignment="CENTER" spacing="28">
                        <ProgressIndicator fx:id="noQuestionsSpinner" maxHeight="72" maxWidth="72" progress="-1.0" style="-fx-accent: #185a9d;" />
                        <Label style="-fx-font-size: 28px; -fx-text-fill: #185a9d; -fx-font-family: 'Segoe UI Semibold'; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #43cea2, 2, 0.2, 0, 1);" text="No questions available for this evaluation yet." />
                    </VBox>
                </StackPane>
                <Button fx:id="backButton" style="-fx-background-radius: 16; -fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 7 32 7 32; -fx-effect: dropshadow(gaussian, #ff512f44, 2, 0.11, 0, 1); -fx-cursor: hand; -fx-font-family: 'Segoe UI Semibold'; -fx-border-radius: 16; -fx-border-width: 1.5; -fx-border-color: #fff;" text="Back">
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>