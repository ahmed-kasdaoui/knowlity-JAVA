<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750" prefWidth="1200" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2b5876, #4e4376);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.knowlity.controller.teacher.TeacherEvaluationFormController">
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.topAnchor="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
        <content>
            <VBox alignment="CENTER" minHeight="700" minWidth="800" spacing="30" style="-fx-background-color: transparent;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Text fx:id="formTitle" style="-fx-font-size: 40px; -fx-fill: #ffffff; -fx-font-family: 'Segoe UI Black'; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #00000033, 4, 0.2, 0, 1);" text="Add/Edit Evaluation" />
                <GridPane hgap="15" vgap="20">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="courseComboBox" prefWidth="400" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="titleField" prefWidth="400" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="descField" prefWidth="400" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Max Score:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="scoreField" prefWidth="150" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <DatePicker fx:id="deadlinePicker" prefWidth="150" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
                <VBox spacing="15">
                    <Text style="-fx-font-size: 20px; -fx-fill: #ffffff; -fx-font-family: 'Segoe UI Semibold';" text="Badge Details" />
                    <GridPane hgap="15" vgap="20">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Badge Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="badgeTitleField" prefWidth="200" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Badge Threshold:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="badgeThresholdField" prefWidth="200" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-font-family: 'Segoe UI';" text="Badge Image:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="badgeImageField" prefWidth="200" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #43cea2; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 8 12 8 12; -fx-prompt-text-fill: #888888; -fx-focus-color: #185a9d; -fx-faint-focus-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="saveButton" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to right, #43cea2, #185a9d); -fx-text-fill: white; -fx-font-size: 17px; -fx-font-family: 'Segoe UI Semibold'; -fx-padding: 8 32 8 32; -fx-effect: dropshadow(gaussian, #43cea244, 2, 0.11, 0, 1); -fx-cursor: hand;" text="Save Evaluation" />
                    <Button fx:id="backButton" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-font-size: 17px; -fx-font-family: 'Segoe UI Semibold'; -fx-padding: 8 32 8 32; -fx-effect: dropshadow(gaussian, #ff512f44, 2, 0.11, 0, 1); -fx-cursor: hand;" text="Back" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>